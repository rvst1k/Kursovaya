
<style>

.table {

    margin-top: 50px;
    margin-bottom: 30px;
    color: white;
}

    td {
        padding: 0 15px;
    }

    h1{
        font-size:20px;
    }
</style>



<body>
    <div class="table">
        <h1>Запись:</h1>
<table>
    <thead>
        <tr>
            <th>ID_Записи</th>
            <th>ID_Пользователя</th>
            <th>ID_Услуги</th>
            <th>Телефон</th>
        </tr>
    </thead>
    <tbody>
        @using (StudioContext db = new StudioContext())
        {
        @foreach (var item in db.Записьs)
        {
            <tr>
                <td>@item.Idзаписи</td>
                <td>@item.Idпользователя</td>
                <td>@item.Idуслуги</td>
                <td>@item.Телефон</td>
            </tr>
        }
     }
    </tbody>
</table>   
            <div class="table">
                <h1>Пользователи:</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Логин</th>
                <th>Пароль</th>
            </tr>
        </thead>
        <tbody>
            @using (StudioContext db = new StudioContext())
            {
                @foreach (var item in db.Пользовательs)
                {
                    <tr>
                        <td>@item.Idпользователя</td>
                        <td>@item.Имя</td>
                        <td>@item.Фамилия</td>
                        <td>@item.Логин</td>
                        <td>@item.Пароль</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    </div>
</div>
</body>